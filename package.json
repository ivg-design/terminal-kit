{
  "name": "terminal-kit",
  "version": "1.0.0",
  "description": "A retro-futuristic web components library with terminal aesthetics",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail -s first \"npm:dev:vite\" \"npm:dev:docs\"",
    "dev:vite": "vite --clearScreen false",
    "dev:docs": "npm run docs:build --silent && nodemon --quiet --watch docs --watch mkdocs.yml --ext md,yml --exec \"npm run docs:build --silent\"",
    "build": "vite build",
    "preview": "vite preview",
    "docs": "python3 -m mkdocs serve --dev-addr=0.0.0.0:8001",
    "docs:build": "python3 -m mkdocs build --clean --quiet",
    "dev:mirror": "DEVMIRROR_PKG_PATH=\"/Users/ivg/github/terminal-kit\" concurrently \"npx devmirror-cli\" \"npm:dev\""
  },
  "keywords": [
    "web-components",
    "terminal",
    "ui-library",
    "cyberpunk",
    "retro"
  ],
  "author": "IVG Design",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.7",
    "vite": "^7.1.5"
  }
}