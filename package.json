{
  "name": "terminal-kit",
  "version": "1.0.0",
  "description": "A retro-futuristic web components library with terminal aesthetics",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "dev:all": "concurrently --kill-others-on-fail \"npm:dev\" \"npm:docs:dev\"",
    "build": "vite build",
    "build:all": "npm run build && npm run docs:build",
    "preview": "vite preview",
    "docs:dev": "vitepress dev docs --port 5174",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "dev:dsd": "node scripts/serve-with-dsd.mjs",
    "generate:dsd": "node scripts/dsd-generator.mjs",
    "dev:all:mirror": "DEVMIRROR_PKG_PATH=\"/Users/ivg/github/terminal-kit\" concurrently \"node \\\"./.vscode/devmirror/cli.cjs\\\"\" \"concurrently --kill-others-on-fail \"npm:dev\" \"npm:docs:dev\"\"",
    "dev:dsd:mirror": "DEVMIRROR_PKG_PATH=\"/Users/ivg/github/terminal-kit\" concurrently \"node \\\"./.vscode/devmirror/cli.cjs\\\"\" \"node scripts/serve-with-dsd.mjs\""
  },
  "keywords": [
    "web-components",
    "terminal",
    "ui-library",
    "cyberpunk",
    "retro"
  ],
  "author": "IVG Design",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "glob": "^11.0.3",
    "jsdom": "^27.0.0",
    "vite": "^7.1.5",
    "vitepress": "^1.6.4"
  },
  "dependencies": {
    "lit": "^3.3.1",
    "puppeteer-core": "^24.22.3"
  }
}
